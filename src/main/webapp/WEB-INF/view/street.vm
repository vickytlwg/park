<script src="/park/script/street.js"></script>
<script src="/park/script/service/textModalService.js"></script>
<div class="content-wrapper" ng-app="streetApp" ng-controller="streetCtrl">
	<section class="content-header">
          <h1>
     街道路段管理
            <small></small>
          </h1>
       
    </section>

    <section class="content">
       <div class="row">
            <div class="col-xs-12">
              	<div class="box">	               
	             <div class="box-body"> 
					<div class="btn-group">
		                		<button #if(!$isAdmin) disabled#end  ng-click="refreshStreet()" type="button" class="btn bg-purple"><span class="glyphicon glyphicon-refresh"></span> 刷新</button>
		                		<button #if(!$isAdmin) disabled#end  ng-click="insertStreet()" type="button" class="btn bg-olive"><span class="glyphicon glyphicon-pencil"></span> 添加</button>
		                		<button #if(!$isAdmin) disabled#end  ng-click="updateStreet()" type="button" class="btn bg-navy"><span class="glyphicon glyphicon-edit"></span> 更新</button>
		                		<button #if(!$isAdmin) disabled#end  ng-click="deleteStreet()" type="button" class="btn  bg-orange"><span class="glyphicon glyphicon-remove"></span> 删除</button>
		                	</div>	
				<div class="pull-right">		
							                	
	                	</div>
	                    <br/>   
	                    <br/>    	
						<div>
							  <table class="table table-bordered table-hover table-condensed" id='parkTable' style="font-size:12px">
					          
					            <tr>					            
					             <th><span style=""><input type="checkbox" /></div></th>
										<th><span style="padding-left:15%">Id</div></th>								
										<th><span style="padding-left:15%">路段编号</div></th>
										<th><span style="padding-left:15%">路段名称</div></th>
										<th><span style="padding-left:15%">所在区域</div></th>
										<th><span style="padding-left:15%">路段类型</div></th>
										<th><span style="padding-left:15%">联系人</div></th>
										<th><span style="padding-left:15%">联系电话</div></th>
										<th><span style="padding-left:15%">注册时间</div></th>
										<th><span style="padding-left:15%">备注</div></th>	
															
					            </tr>
					          
					          <tbody id="parkBody"></tbody>
							  <tr ng-repeat="street in streets">
							  <td ><input type="checkbox" ng-model="street.checked" ng-click="selectChange($index)"/></td>
							  <td ng-bind="street.id"></td>
							  <td ng-bind="street.number"></td>
							  <td ng-bind="street.name"></td>
							  <td ng-bind="street.areaName"></td>
							  <td ng-bind="street.type"></td>
							  <td ng-bind="street.contact"></td>
							  <td ng-bind="street.phone"></td>
							  <td ng-bind="street.date"></td>
							  <td ng-bind="street.other"></td>
							
							  </tr>
					          </table>
    					</div>
    				</div>
    				<div class="box-footer clearfix">
      					<div id='pagination'></div>
      				</div>
	            </div>
            </div>
        </div>

    </section>
						
</div>




