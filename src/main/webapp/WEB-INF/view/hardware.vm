<script src="/park/script/mac.js"></script>

<div id="mac">
	<div class="btn-group">
		<button id="refresh" type="button" class="btn btn-default"><span class="glyphicon glyphicon-refresh"></span></button>
		<button id='addMac' type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil"> Add</span></button>
		<button id='updateMac' type="button" class="btn btn-default"><span class="glyphicon glyphicon-edit"> Update</span></button>
		<button id='deleteMac' type="button" class="btn btn-default"><span class="glyphicon glyphicon-remove"> Delete</span></button>
		<button id='searchMac' type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"> Search</span></button>
	</div>
	
	<div id= 'macDiv'>
		<table id='macTable' class="table table-hover table-bordered">
			<caption></caption>
			<thead>
				<tr>
					<th><input type="checkbox" /></th>
					<th>Id</th>	
					<th>MAC</th>	
					<th>类型</th>
					<th>状态</th>
					<th>描述</th>
					<th>日期</th>
				</tr>
			</thead>
			<tbody id="macBody"></tbody>
		</table>
	</div>
	<div id='pagination'></div>
</div>


<div class="modal fade" id="addMacModal" tabindex="-1" role="dialog" aria-labelledby='addMacLabel' aria-hidden='true'>
	<div class='modal-dialog'>
		<div class='modal-content'>
		
			<div class='modal-header'>
				<button type='button' class='close' data-dismiss='modal' aria-hidden='true'>&times;</button>
				<h4 class='modal-title' id='addMacLabel'>硬件信息</h4>
			</div>
			
			<div class='modal-body'>
				<form class='form-horizontal' id='addMacForm' role='form'>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='Tt'>MAC</label>
						<div class='col-sm-8'>
							<input type='text' class='form-control' id='mac' placeholder='MAC地址'>
						</div>
					</div>
					
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='macType'>type</label>
						<div class='col-sm-8'>
							<select class='form-control' id='macType'>
								<option value=0>车位MAC</option>
								<option value=1>出入口MAC</option>
							</select>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='macStatus'>状态</label>
						<div class='col-sm-8'>
							<select class='form-control' id='macStatus' disabled = "true">
								<option value=1>未使用</option>
								<option value=0>已使用</option>
							</select>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='macDesc'>描述</label>
						<div class='col-sm-8'>
							<input type='text' class='form-control' id='macDesc' placeholder='请输入描述信息'>
						</div>
					</div>
					
					<div id='addMacResult'>						
					</div>
			</div>
			
			<div class='modal-footer'>
				<button type='button' class='btn btn-default' data-dismiss='modal'>关闭</button>
				<button id="submitMacBtn" type='button' class='btn btn-primary'>提交</button>
			</div>
			
		</div>
	</div>
</div>

<div id='showMessage'>
</div>

<div id='showErrorMessage'>
</div>

<script>
$(document).ready(function(){
	$.fn.mac.initial();
});

</script>

</script>