<script src="/park/script/service/textModalService.js"></script>

<script src="/park/script/role.js"></script>



<div class="content-wrapper" ng-app="roleApp" ng-controller="roleCtrl">
	<section class="content-header">
          <h1>
            角色管理
            <small></small>
          </h1>     
    </section>
    <section class="content">
       <div class="row">
            <div class="col-xs-12">
              	<div class="box">
	                <div class="box-header">
	                  <h3 class="box-title"></h3>
	                </div><!-- /.box-header -->
	                <div class="box-body">  
		                	<div class="btn-group">
		                		<button #if(!$isAdmin) disabled#end ng-click="role.refresh()" type="button" class="btn bg-purple"><span class="glyphicon glyphicon-refresh"></span> 刷新</button>
		                		<button #if(!$isAdmin) disabled#end ng-click="role.insert()" type="button" class="btn bg-olive"><span class="glyphicon glyphicon-pencil"></span> 添加</button>
		                		<button #if(!$isAdmin) disabled#end ng-click="role.update()" type="button" class="btn bg-navy"><span class="glyphicon glyphicon-edit"></span> 更新</button>
		                		<button #if(!$isAdmin) disabled#end ng-click="role.remove()" type="button" class="btn  bg-orange"><span class="glyphicon glyphicon-remove"></span> 删除</button>
		                	</div>
                	
	                	<br/>   
	                    <br/> 
						<div>
						 <table class="table table-hover  table-condensed" id='channelTable' style="font-size:12px">
				            <tr>				            
				             <th><span style=""><input type="checkbox" /></span></th>
									<th><span >Id</span></th>		
									<th><span>名称</span></th>
									<th><span>描述</span></th>
									<th><span>页面管理</span></th>
									
				            </tr>
				          <tbody id="channelBody"></tbody>
				          	<tr  ng-repeat = "item in role.items">
				          		<td ><input type="checkbox" ng-model="item.checked" ng-click="role.checked($index)"/></td>
				          		<td ng-bind="item.id"></td>
				          		<td ng-bind="item.name"></td>
				          		<td ng-bind="item.description"></td>
				          		<td><button class="btn-sm btn btn-info" ng-click="role.allocatePages($index)">分配页面</button></td>
								
				          </table>
    					</div>
    				</div>

	            </div>
            </div>
        </div>

    </section>
						
</div>
