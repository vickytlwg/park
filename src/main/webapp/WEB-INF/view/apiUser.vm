<script src="/park/script/apiUser.js"></script>


<link href="/park/cssmb/tables.css" rel="stylesheet">
<link href="/park/cssmb/master.css" rel="stylesheet">

<div ng-app="apiUserApp" ng-controller="apiUserCtrl" >
	<div class="box-content no-pad" >
         <ul class="table-toolbar" #if(!$isAdmin) hidden#end>       
            <li  ng-click="refreshUser()"><a  href="#" ><img src="/park/img/icons/basic/refresh.png" style="width:18px;height:auto;" alt="" /> 刷新</a></li>
            <li ng-click="addUserModal()"><a href="#"><img src="/park/img/icons/basic/plus.png" alt="" /> 添加</a></li>           
            <li ng-click="updateUserModal()"><a href="#"><img src="/park/img/icons/basic/up.png" alt="" /> 更新</a></li>
            <li ng-click="deleteUserModal()"><a href="#"><img src="/park/img/icons/basic/delete.png" alt="" /> 删除</a></li>
            
          </ul>
          <table class="display table table-hover  table-condensed" id='channelTable' style="font-size:12px">
           <thead>
            <tr>
            
             <th><span style=""><input type="checkbox" /></div></th>
					<th ><span style="padding-left:15%">Id</div></th>		
					<th><span style="padding-left:15%">用户名</div></th>
					<th><span style="padding-left:15%">公司信息</div></th>
					<th><span style="padding-left:15%">联系人</div></th>
					<th><span style="padding-left:15%">电话</div></th>
					<th><span style="padding-left:15%">TokenId</div></th>
					<th><span style="padding-left:15%">显示token</div></th>
            </tr>
          </thead>
          <tbody id="channelBody"></tbody>
          	<tr ng-repeat = "item in apiUsers">
          		<td><input type="checkbox" ng-click="checked($index)"/></td>
          		<td>{{item.id}}</td>
          		<td>{{item.username}}</td>
          		<td>{{item.companyInfo}}</td>   		
          		<td>{{item.contact}}</td>
          		<td>{{item.number}}</td>
          		<td>{{item.tokenId}}</td>
          		<td><a class="button" ng-click="tokenModal">显示token</a></td>
          </table>
		    </div>
		    <div id='pagination'>
		    	<ul class="pagination" ng-repeat = "x in range(1, pageNumber)">
		    		<li><a href='#'>{{x}}</a></li>
		    	</ul>
		    
		    </div>
        </div>
        </div>
</div>