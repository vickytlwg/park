<script src="/park/script/channel.js"></script>

<div id="channel">

	<div class="panel">
		<span class="label label-default">出入口管理</span>
	</div>
	<div class="btn-group">
		<button id="refresh" type="button" class="btn btn-default"><span class="glyphicon glyphicon-refresh"></span> Refresh</button>
		<button id='addChannel' type="button" class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span> Add</button>
		<button id='updateChannel' type="button" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span> Update</button>
		<button id='deleteChannel' type="button" class="btn btn-default"><span class="glyphicon glyphicon-remove"></span> Delete</button>
		<button id='searchChannel' type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> Search</button>
	</div>
	
	<div id= 'channelDiv'>
		<table id='channelTable' class="table table-hover table-bordered">
			<caption></caption>
			<thead>
				<tr>
					<th><input type="checkbox" /></th>
					<th>Id</th>	
					<th>停车场名称</th>	
					<th>通道编号</th>
					<th>MAC Id</th>
					<th>标志</th>
					<th>状态</th>
					<th>描述</th>
					<th>日期</th>
				</tr>
			</thead>
			<tbody id="channelBody"></tbody>
		</table>
	</div>
	<div id='pagination'></div>
</div>


<div class="modal fade" id="addChannelModal" tabindex="-1" role="dialog" aria-labelledby='addChannelLabel' aria-hidden='true'>
	<div class='modal-dialog'>
		<div class='modal-content'>
		
			<div class='modal-header'>
				<button type='button' class='close' data-dismiss='modal' aria-hidden='true'>&times;</button>
				<h4 class='modal-title' id='addChannelLabel'>出入口信息</h4>
			</div>
			
			<div class='modal-body'>
				<form class='form-horizontal' id='addChannelForm' role='form'>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='parkName'>停车场名称</label>
						<div class='col-sm-8'>
							<select class='form-control' id='parkName'>
							<option>请选择停车场</option>
							</select>
						</div>
						<div id='parkNameLoader'>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='channelNumber'>通道编号</label>
						<div class='col-sm-8'>
							<input type='text' class='form-control' id='channelNumber' placeholder='通道编号'>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='macId'>硬件地址</label>
						<div class='col-sm-8'>
							<select class='form-control' id='macId'>
							<option>请选择MAC ID</option>
							</select>
						</div>
						<div id='macIdLoader'>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='channelFlag'>标志</label>
						<div class='col-sm-8'>
							<select class='form-control' id='channelFlag'>
								<option value=0>出口</option>
								<option value=1>入口</option>
							</select>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='channelStatus'>状态</label>
						<div class='col-sm-8'>
							<select class='form-control' id='channelStatus'>
								<option value=1>可用</option>
								<option value=0>不可用</option>
							</select>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='channelDesc'>描述</label>
						<div class='col-sm-8'>
							<input type='text' class='form-control' id='channelDesc' placeholder='请输入描述信息'>
						</div>
					</div>
					
					<div id='addChannelResult'>						
					</div>
			</div>
			
			<div class='modal-footer'>
				<button type='button' class='btn btn-default' data-dismiss='modal'>关闭</button>
				<button id="submitChannelBtn" type='button' class='btn btn-primary'>提交</button>
			</div>
			
		</div>
	</div>
</div>

<div id='showMessage'>
</div>

<div id='showErrorMessage'>
</div>

<script>
$(document).ready(function(){
	$.fn.channel.initial();
});

</script>

