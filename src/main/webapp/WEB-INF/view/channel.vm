<script src="/park/script/channel.js"></script>

<div class="content-wrapper">
	<section class="content-header">
          <h1>
           出入口管理
            <small></small>
          </h1>
    
    </section>

    <section class="content">
       <div class="row">
            <div class="col-xs-12">
              	<div class="box">
	                <div class="box-header">
	                  <h3 class="box-title"></h3>
	                </div><!-- /.box-header -->
	                <div class="box-body">  
		                	<div class="btn-group">
		                		<button #if(!$isAdmin) disabled#end id="refresh" type="button" class="btn bg-purple"><span class="glyphicon glyphicon-refresh"></span> 刷新</button>
		                		<button #if(!$isAdmin) disabled#end id='addChannel' type="button" class="btn bg-olive"><span class="glyphicon glyphicon-pencil"></span> 添加</button>
		                		<button #if(!$isAdmin) disabled#end id='updateChannel' type="button" class="btn bg-navy"><span class="glyphicon glyphicon-edit"></span> 更新</button>
		                		<button #if(!$isAdmin) disabled#end id='deleteChannel' type="button" class="btn  bg-orange"><span class="glyphicon glyphicon-remove"></span> 删除</button>
		                	</div>
	                	<div class="pull-right">
	                	<select class="form-control" style="padding:1px;font-size:14px;height:35px" id="searchPark">
	                		#if($isAdmin) <option value=-1>所有停车场</option>#end           		
	                	</select>
	                	</div>
	           
					<div class="row" style="margin-top:15px">
					<div class="col-md-4">
					<input type="text" class="form-control" id="keywordsInput" placeholder="输入关键字"/>
                    </div>
					<div class="col-md-2">
					<button type="button" id="keywordsSearch" class="btn btn-success">查询</button>
					</div>					
					<div class="col-md-4">
						<input type="text" class="form-control" id="daynum" placeholder="输入天数"/>
                    </div>
					<div class="col-md-2">
					<button type="button" id="daysearch" class="btn btn-success">查询</button>
					</div>
                    </div>
					<br/>
					<div>
							 <table class="table table-bordered table-hover" style="font-size:12px">
								<tr>
								 	<th><span style=""><input type="checkbox" /></div></th>
									<th ><span style="padding-left:15%">Id</div></th>		
									<th><span style="padding-left:15%">停车场名称</div></th>
									<th><span style="padding-left:15%">通道编号</div></th>
									<th><span style="padding-left:15%">MAC Id</div></th>
									<th><span style="padding-left:15%">标志</div></th>
									<th><span style="padding-left:15%">状态</div></th>
									<th><span style="padding-left:15%">描述</div></th>
									<th><span style="padding-left:15%">日期</div></th>	
								</tr>
								<tbody id="channelBody">
									
								</tbody>
							</table>
    					</div>
    				</div>
    				<div class="box-footer clearfix">
      					<div id='pagination'></div>
      				</div>
	            </div>
            </div>
        </div>

    </section>
						
</div>

<div class="modal fade" id="addChannelModal" tabindex="-1" role="dialog" aria-labelledby='addChannelLabel' aria-hidden='true'>
	<div class='modal-dialog'>
		<div class='modal-content'>
		
			<div class='modal-header'>
				<button type='button' class='close' data-dismiss='modal' aria-hidden='true'>&times;</button>
				<h4 class='modal-title' id='addChannelLabel'>出入口信息</h4>
			</div>
			
			<div class='modal-body'>
				<form class='form-horizontal' id='addChannelForm' role='form'>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='parkName'>停车场名称</label>
						<div class='col-sm-8'>
							<select class='form-control' id='parkName'>
							<option>请选择停车场</option>
							</select>
						</div>
						<div id='parkNameLoader'>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='channelNumber'>通道编号</label>
						<div class='col-sm-8'>
							<input type='text' class='form-control' id='channelNumber' placeholder='通道编号'>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='macId'>硬件地址</label>
						<div class='col-sm-8'>
							<select class='form-control' id='macId'>
							<option>请选择MAC ID</option>
							</select>
						</div>
						<div id='macIdLoader'>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='channelFlag'>标志</label>
						<div class='col-sm-8'>
							<select class='form-control' id='channelFlag'>
								<option value=0>出口</option>
								<option value=1>入口</option>
								<option value=2>剩余车位发布器</option>
							</select>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='channelStatus'>状态</label>
						<div class='col-sm-8'>
							<select class='form-control' id='channelStatus'>
								<option value=1>可用</option>
								<option value=0>不可用</option>
							</select>
						</div>
					</div>
					<div class='form-group'>
						<label class='col-sm-2 control-label' for='channelDesc'>描述</label>
						<div class='col-sm-8'>
							<input type='text' class='form-control' id='channelDesc' placeholder='请输入描述信息'>
						</div>
					</div>
					
					<div id='addChannelResult'>						
					</div>
			</div>
			
			<div class='modal-footer'>
				<button type='button' class='btn btn-default' data-dismiss='modal'>关闭</button>
				<button id="submitChannelBtn" type='button' class='btn btn-primary'>提交</button>
			</div>
			
		</div>
	</div>
</div>

<div id='showMessage'>
</div>

<div id='showErrorMessage'>
</div>

